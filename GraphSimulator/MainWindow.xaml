<Window x:Class="GraphSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphSimulator"
        xmlns:usercontrol="clr-namespace:GraphSimulator.User_Controls"
        xmlns:converter="clr-namespace:GraphSimulator.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="./Styles/AppStyle.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <TabControl Grid.Row="0">
            <TabItem Header="Create graph">
                <StackPanel Orientation="Horizontal">
                    <Button Content="New" 
                            Click="Button_New_Click"
                            Style="{StaticResource ButtonTool}"/>
                    <Button Content="Open" Grid.Column="1"
                            Style="{StaticResource ButtonTool}"
                            Click="Button_Open_Click"/>
                    <Button Content="Save" Grid.Column="2" 
                            Style="{StaticResource ButtonTool}"
                            Click="Button_Save_Click"/>
                    <StackPanel VerticalAlignment="Stretch"
                                Width="100" Margin="10,10">
                        <ToggleButton 
                            Content="Add connection" 
                            Grid.Column="3"
                            IsChecked="{Binding IsCreatingConnection}"
                            />
                        <CheckBox Content="Random cost"
                                  IsChecked="{Binding IsRandomCost}"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Run algorithms">
                <StackPanel Orientation="Horizontal">
                    <ComboBox VerticalAlignment="Center" 
                              Width="150" 
                              SelectedIndex="0"
                              Margin="10,0,30,0">
                        <ComboBoxItem>Dijkstra's Algorithm</ComboBoxItem>
                        <ComboBoxItem>Bellman Ford's</ComboBoxItem>
                        <ComboBoxItem>DFS Algorithm</ComboBoxItem>
                        <ComboBoxItem>BFS Algorithm</ComboBoxItem>
                    </ComboBox>
                    <StackPanel VerticalAlignment="Center">
                        <RadioButton Content="Only show the result" Margin="0,0,0,10" IsChecked="True"/>
                        <RadioButton Content="Step by step" Margin="0,0,0,10"/>
                        <RadioButton Content="Visualization" x:Name="rbVisualization"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" Margin="30,0" IsEnabled="False">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=rbVisualization, Path=IsChecked}" Value="True">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Speed" Margin="0,0,0,10"/>
                        <Slider Width="200" Interval="25" Maximum="100"/>
                    </StackPanel>
                    <Button Content="Run" 
                            Style="{StaticResource ButtonTool}"
                            Click="Button_Run_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="About"></TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="350" MinWidth="150"/>
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="5,10">
                <StackPanel.Resources>
                    <converter:RouteCostConverter x:Key="RouteCostConverter"/>
                </StackPanel.Resources>
                <DataGrid Name="dataGrid"
                          IsReadOnly="True"
                          ItemsSource="{Binding Routes}"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          CanUserDeleteRows="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          SelectionUnit="FullRow"
                          Height="200"
                          SelectionChanged="dataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Node"
                                            Width="*"
                                            Binding="{Binding DestNode}"/>
                        <DataGridTextColumn Header="Path"
                                            Binding="{Binding PreviousNode}"
                                            Width="*"/>
                        <DataGridTextColumn Header="TotalCost" 
                                            Width="*"
                                            Binding="{Binding RouteCost, Converter={StaticResource RouteCostConverter}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <GridSplitter 
                Grid.Column="1" 
                Width="3" 
                HorizontalAlignment="Stretch" 
                Background="DarkGray"/>
            <Grid Name="coveringPanel" 
                  Grid.Column="2" 
                  Background="#889e9e9e" 
                  Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Workspace needs to be initialized.."/>
                    <Button Content="New..." 
                            Width="100" Height="25" 
                            Margin="0,10,0,0"
                            Click="Button_New_Click"/>
                </StackPanel>
            </Grid>
            <Canvas Background="WhiteSmoke"
                    Grid.Column="2"
                    x:Name="GraphContainer"
                    Focusable="True"
                    IsEnabled="False"
                    KeyDown="GraphContainer_KeyDown"
                    MouseLeftButtonDown="GraphContainer_MouseLeftButtonDown">
                <usercontrol:Connection ArrowDirection="TwoWay"/>
            </Canvas>
        </Grid>
    </Grid>
</Window>
