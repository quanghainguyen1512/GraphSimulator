<Window x:Class="GraphSimulator.SubWindows.CostInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphSimulator.SubWindows"
        mc:Ignorable="d"
        Title="" Height="200" Width="300"
        Background="LightGray"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed">
    <StackPanel VerticalAlignment="Center" Margin="30, 0">
        <TextBlock 
            Text="Enter connection's cost:"
            FontSize="18"/>
        <TextBox 
            Name="txbCost" 
            Margin="0,20"
            FontSize="15"
            PreviewTextInput="txbCost_PreviewTextInput"
            Padding="4"
            Text="5"
            />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="80" Margin="0,0,20,0"
                    Click="Button_Ok_Click"/>
            <Button Content="Cancel" Width=" 80"
                    Click="Button_Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
